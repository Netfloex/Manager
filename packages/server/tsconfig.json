{
	"compilerOptions": {
		"baseUrl": ".",
		"downlevelIteration": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"incremental": true,
		"module": "esnext",
		"moduleResolution": "node",
		"noEmit": true,
		"outDir": "dist",
		"paths": {
			"@lib/*": ["src/lib/*"],
			"@api": ["src/lib/api"],
			"@socketTypes/*": ["../shared/typings/socket/*"],
			"@apiTypes/*": ["../shared/typings/api/*"],
			"@typings/*": ["src/typings/*"],
			"@utils": ["src/utils"]
		},
		"skipLibCheck": true,
		"strict": true,
		"target": "ES5"
	},
	"ts-node": {
		"compilerOptions": {
			"module": "commonjs"
		}
	}
}
