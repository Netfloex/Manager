{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@typings/*": ["src/typings/*"],
			"@styles/*": ["src/styles/*"],

			"@components/*": ["src/components/*"],
			"@lib/*": ["src/lib/*"],
			"@utils/*": ["src/utils/*"],
			"@hooks/*": ["src/utils/hooks/*"],
			"@socketTypes/*": ["../shared/typings/socket/*"],
			"@apiTypes/*": ["../shared/typings/api/*"],
			"@seo-default": ["src/next-seo.config"],
			"@pages": ["src/pages"]
		},
		"outDir": "./dist",
		"target": "ES5",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"incremental": true,
		"lib": ["ES2019.Array", "DOM"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"module": "esnext",
		"moduleResolution": "node",
		"isolatedModules": true,
		"jsx": "preserve"
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
	"exclude": ["node_modules"]
}
